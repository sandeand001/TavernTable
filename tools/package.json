{
  "name": "taverntable",
  "version": "1.0.0",
  "description": "An isometric grid-based tabletop game interface",
  "main": "index.html",
  "scripts": {
    "lint": "eslint -c .eslintrc.json ../src/**/*.js && stylelint -c .stylelintrc.json ../src/**/*.css",
    "lint:js": "eslint -c .eslintrc.json ../src/**/*.js",
    "lint:css": "stylelint -c .stylelintrc.json ../src/**/*.css",
    "lint:fix": "eslint -c .eslintrc.json ../src/**/*.js --fix && stylelint -c .stylelintrc.json ../src/**/*.css --fix",
    "serve": "cd .. && python -m http.server 3000"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "keywords": [
    "game",
    "tabletop",
    "isometric",
    "pixi.js"
  ],
  "author": "",
  "license": "MIT"
}