{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "PIXI": "readonly"
  },
  "rules": {
    // Style handled by Prettier; keep behavioral rules here
    "linebreak-style": "off",
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "camelcase": "error",
    "prefer-const": "error",
    "no-var": "error"
  }
}
